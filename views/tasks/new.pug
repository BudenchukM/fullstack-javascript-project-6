extends ../layout.pug

block content
  h1= t('create_task')
  form(method='POST', action='/tasks')
    .mb-3
      label.form-label(for='data_name')= t('name')
      input.form-control(type='text', id='data_name', name='data[name]')
    .mb-3
      label.form-label(for='data_description')= t('description')
      textarea.form-control(id='data_description', name='data[description]')
    .mb-3
      label.form-label(for='data_statusId')= t('status')
      input.form-control(type='number', id='data_statusId', name='data[statusId]')
    .mb-3
      label.form-label(for='data_executorId')= t('executor')
      input.form-control(type='number', id='data_executorId', name='data[executorId]')
    button.btn.btn-primary(type='submit')= t('submit')
